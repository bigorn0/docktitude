{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
    ]
}
